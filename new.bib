	pages = {509--520},
	file = {AIP Journal PDF:/home/levesque/.zotero/zotero/nqukbk1u.default/zotero/storage/2AFSHG6T/Hirata et al. - 1982 - Application of an extended RISM equation to dipola.pdf:application/pdf;AIP Journal Snapshot:/home/levesque/.zotero/zotero/nqukbk1u.default/zotero/storage/BEPWP5QW/p509_s1.html:text/html}
}


